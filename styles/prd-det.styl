
/* Prd-list section
-------------------------------------------------- */

div#product1-detail,#product2-detail,#product3-detail,#product4-detail,#product5-detail,#product6-detail,#product7-detail,#product8-detail
	margin 0 auto 50px auto
	width 1000px
	height 400px
	background-image url('images/prd-det1-shadow.png')
	background-repeat no-repeat
	background-position center 90%
	padding-top 40px

	& div.des
		margin-left 550px
		height 400px
		padding 0 32px 0 0

		& h2
			font-size 32px
			font-weight bold
			color #8a49b3

		& p
			font-size 16px

		div.back-product
			cursor pointer
			width 80px
			font-size 25px
			color hsl(277, 42%, 49%)

	div.prd-slider
		width 330px
		height 400px
		position relative
		left 110px
		&:hover
			div.prd-prev,
			div.prd-next
				transition all 200ms
				display block
				opacity 1

		div.prd-prev,
		div.prd-next
			width 32px
			height 32px
			font-size 35px
			cursor pointer
			z-index 50
			color hsl(0, 0%, 70%)
			position absolute
			top 150px
			display none
			opacity 0
			transition all 200ms

		div.prd-prev
			left 5px

		div.prd-next
			right 12px

		div.prd-casetrain
			position relative
			width 330px
			height 400px
			overflow hidden

			div.prd-train
				width 10000px
				height 400px
				overflow hidden
				position absolute
				left 0

				& > div
					width 330px
					height 350px
					float left
					background-image url('images/prd/saffron1.jpg')
					background-repeat no-repeat
					background-position center center

.ltrLang #product1-detail,.ltrLang #product2-detail,.ltrLang #product3-detail,.ltrLang #product4-detail,.ltrLang #product5-detail,.ltrLang #product6-detail,.ltrLang #product7-detail,.ltrLang #product8-detail
	div.des
		margin-right 550px
		margin-left 0px
		h2
			font-size 30px
		p
			font-size 14px 