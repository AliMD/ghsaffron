
/* Products section
-------------------------------------------------- */
section#products
	width 1000px
	margin 0 auto 50px auto
	padding-top 1px

	& div.container-slider
		position relative

		div.prev, div.next
			width 30px
			height 50px
			position absolute
			top 200px
			background url('images/arrow.png') no-repeat
			cursor pointer
			z-index 10

		div.prev
			left -100px
			background-position 0 center

		div.next
			right -100px
			background-position -30px center

		& div.case-train
			position relative
			width 980px
			min-height 512px
			overflow hidden
			margin 0 auto

			& div.train
				width 10000px
				position absolute
				left 0

				& div.product-slide
					width 980px
					float left

					span.prd-hover
						overflow hidden
						display block
						position absolute
						top 0
						left 0
						right 0
						bottom 0
						opacity 0
						z-index 2
						font-size 25px
						font-family 'Pacifico',cursive
						text-align center
						padding-left 5px
						padding-right 5px
						padding-top 140px
						white-space nowrap
						border-radius 10px
						transition all 400ms ease-out
						background-image url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAAEElEQVR42gEFAPr/AAAAAE0AUgBOVWHfgwAAAABJRU5ErkJggg==')
						background-repeat repeat

						span
							display inline-block
							background-color hsl(0, 100%, 100%)
							color hsl(0, 0%, 18%)
							padding 5px 20px
							border-radius 5px
							font-family arial
							font-weight bold
							opacity 1

					div.prd-title
						background-image url('images/line.png')
						background-repeat no-repeat
						background-position 90px 23px
						margin 20px auto 0
						padding-right 32px
						padding-left 32px
						font-size 30px
						min-height 40px
						font-family nazanin
						color #8a49b3
						width auto
						height 60px
						text-indent 10000px
						overflow hidden
						img
							float right

					div.prd-shadow
						background-image url('images/prd-shadow.png')
						background-repeat no-repeat
						width 800px
						background-size cover
						margin 10px auto 0 auto
						height 28px

					& div.prds
						margin 0 auto
						width 850px

						& > div
							height 200px
							width 200px
							overflow hidden
							float left
							margin 25px 0 0 10px
							border-radius 10px
							cursor pointer
							position relative
							img
								border-radius 10px

							&:hover span
								opacity 1
								transition-duration 300ms

.ltrLang 
	section#products
		div.container-slider div.case-train div.train div.product-slide 
			div.prd-title
				background-position 180px 23px
				img
					float left
			span.prd-hover
				text-align center
				font-size 20px
.arrowhide
	display none

html[lang="fa-IR"],
html[lang="ar-AE"],
html[lang="en-US"],
html[lang="es"],
html[lang="fr"]
	section#products
		height 750px