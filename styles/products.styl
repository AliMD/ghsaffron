
/* Products section
-------------------------------------------------- */
section#products
	width 1000px
	height 860px !important
	margin 0 auto 50px auto
	padding-top 1px

	span.prd-hover
		overflow hidden
		display block
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		color rgba(255, 255, 255, 0.65)
		opacity 0
		z-index 2
		font-size 14px
		font-family 'Pacifico',cursive
		text-align right
		font-style italic
		padding-left 5px
		padding-right 15px
		padding-top 140px
		white-space nowrap
		background-color black
		border-radius 10px
		transition all 800ms ease-out

	div.prd-title
		background-image url(images/line.png)
		background-repeat no-repeat
		background-position 400px 23px
		margin 20px auto 0 auto
		width inherit
		height 20px
		padding-left 248px
		padding-right 32px
		font-size 30px
		min-height 40px
		font-family nazanin
		color #8a49b3

	div.prd-shadow
		background-image url(images/prd-shadow.png)
		background-repeat no-repeat
		width 800px
		background-size cover
		margin 10px auto 0 auto
		height 28px

	& > div.prds
		margin 0 auto
		width 850px

		& > div
			height 180px
			width 180px
			overflow hidden
			float left
			margin 25px 0 0 25px
			border-radius 10px
			cursor pointer
			position relative	
		
			&:hover span
				opacity 0.65
				transition-duration 500ms

.ltrLang section#products span.prd-hover
	text-align left

.ltrLang section#products div.prd-title
	background-image url(images/line.png)
	background-repeat no-repeat
	background-position 132px 23px
	margin 20px auto 0 auto
	width inherit
	height 20px
	padding-right 248px
	padding-left 32px
	min-height 40px
	font-size: 32px;
	font-weight: bold;
	text-transform: capitalize;
	color: #8A49B3;