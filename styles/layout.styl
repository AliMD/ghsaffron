
/* global section
-------------------------------------------------- */

body
	color textColor
	if !!textColor2 && textColor != textColor2 && textColor2!='textColor2'
		color textColor2

	background-color backColor
	if !!backColor2 && backColor != backColor2 && backColor2!='backColor2'
		background-color backColor2

body.preload
	div.loading-panel
		display block
		position fixed
		top 0
		right 0
		bottom 0
		left 0
		background-color #871716
		z-index 9999
		transition all 1000ms

		div.loading
			width 200px
			position absolute
			top 40%
			left 0
			right 0
			bottom 0
			margin -32px auto 0
			div#loading-gif
				width 128px
				height 128px
				background-image url('images/preloading.gif')
				background-position center top
				background-repeat no-repeat
				margin 0 auto
			p#loading-text
				margin-top 40px
				text-align center
				font-family tahoma

div.loading-panel
	display none

