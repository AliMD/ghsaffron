
/* About section
-------------------------------------------------- */
section#laboratory
	margin 0 auto 50px auto 
	width 1000px
	margin 0 auto

	& div.about-img
		width 600px
		height 400px
		float left
		div
			background-repeat no-repeat
			background-size contain
			position absolute
			&.saffron1
				background-image url("images/prd/product1.png")
				width 226px
				height 202px
				position absolute
				bottom 72px
				left -13px
			&.saffron2
				background-image url("images/prd/product2.png")
				width 522px
				height 330px
				bottom 30px
				left 0
				z-index 10
			&.saffron3
				background-image url("images/prd/product3.png")
				width 287px
				height 204px
				bottom 13px
				left 270px
				z-index 20

	& div.des 
		margin-left 600px
		text-align justify
		padding 0 32px 0 0
		& h2
			font-size 32px
			font-weight bold
			color #8A49B3 
			width 350px
			height 60px
			text-indent 10000px
			overflow hidden
			img
				float left
		& p
			font-size 16px
			margin-bottom 0
	& div.fulltext
		text-align justify
		padding 0 32px 0 0
		& p
			font-size 16px
			margin-top 0

