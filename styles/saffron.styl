
/* About section
-------------------------------------------------- */
.rtlLang section#aboutsaffron
	margin 0 auto 50px auto 
	width 1000px
	height 1620px !important
	margin 0 auto

	& div.about-img
		width 600px
		height 400px
		float left
		background-image url('images/home.png')
		background-repeat no-repeat
		background-position left center

	& div.des 
		margin-left 600px
		text-align justify
		padding 0 32px 0 0
		& h2
			font-size 32px
			font-weight bold
			color #8A49B3 
			width 250px
			height 60px
			text-indent 10000px
			overflow hidden
			img
				float left
		& p
			font-size 20px
	& div.fulltext
		text-align justify
		padding 0 32px 0 0
		& p
			font-size 20px
		div.saff-ul
			ul
				float right
				margin-right 20px
				font-size 20px
				list-style-type circle

.ltrLang section#aboutsaffron
	margin 0 auto 50px auto 
	width 1000px
	height 1820px !important
	margin 0 auto

	& div.about-img
		width 600px
		height 400px
		float right
		background-image url('images/home.png')
		background-repeat no-repeat
		background-position left center

	& div.des 
		margin-right 600px
		text-align justify
		padding 0 32px 0 0
		
		& h2
			font-size 32px
			font-weight bold
			text-transform capitalize
			color #8A49B3 
			width 350px
			height 60px
			text-indent 10000px
			overflow hidden
			img
				float left

		& p
			font-size 14px 

	& div.fulltext
		text-align justify
		padding 0 32px 0 0
		& p
			font-size 14px
		div.saff-ul
			ul
				float left
				margin-left 9px
				font-size 14px
				list-style-type circle

html[lang="es"]
	.ltrLang section#aboutsaffron
		div.fulltext
			p
				font-size 14px

html[lang="fr"]
	.ltrLang section#aboutsaffron
		div.des
			p
				font-size 19px
		div.fulltext
			p
				font-size 19px