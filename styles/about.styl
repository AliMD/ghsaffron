
/* About section
-------------------------------------------------- */
// right layout Lang
.rtlLang section#aboutus
	margin 0 auto 50px
	width 1000px
	margin 0 auto

	& div.about-img
		width 600px
		height 400px
		float left
		background-image url('images/home.png')
		background-repeat no-repeat
		background-position left center

	& div.des 
		margin-left 600px
		text-align justify
		padding 0 32px 0 0
		& h2
			font-size 32px
			font-weight bold
			color red
			width 350px
			height 60px
			text-indent 10000px
			overflow hidden
			img
				float left
		& p
			font-size 16px 
			margin-bottom 0
	& div.fulltext
		text-align justify
		padding 0 32px 0 0
		& p
			font-size 16px
			margin-top 0

// left layout Lang
.ltrLang section#aboutus
	margin 0 auto 50px
	width 1000px
	margin 0 auto

	& div.about-img
		width 600px
		height 400px
		float right
		background-image url('images/home.png')
		background-repeat no-repeat
		background-position left center

	& div.des 
		margin-right 600px
		text-align justify
		padding 0 32px 0 0
		& h2
			font-size 32px
			font-weight bold
			text-transform capitalize
			color #8A49B3 
			width 350px
			height 60px
			text-indent 10000px
			overflow hidden
			img
				float left
		& p
			font-size 14px
			margin-bottom 0
	& div.fulltext
		text-align justify
		padding 0 32px 0 0
		& p
			font-size 14px
			margin-top 0

html[lang="fa-IR"]
	section#aboutus
		height 730px
html[lang="en-US"]
	section#aboutus
		height 770px
html[lang="es"]
	section#aboutus
		height 810px
html[lang="fr"]
	section#aboutus
		height 810px