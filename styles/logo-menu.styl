section.banner 
	height 300px
	width inherit
	margin 10px auto 0
	bottom 0
	padding-top 1px
	position absolute
	top 0
	left 0
	right 0
	z-index 50

.rtlLang
	nav
		menu
			list-style-type none
			width 648px
			height 100px
			background-image url(images/nav_fa.png)
			background-position center center
			background-repeat no-repeat
			position fixed
			top -117px
			left 0
			right 0
			margin 0 auto
			padding 0
			li
				float right
				margin-top 16px
				a
					display block
					height 50px
					&:hover
						background-image url('images/nav_fa_hover.png')
			.item1
				margin-right 53px
				a
					width 60px
					margin 12px 3px 0 14px
					&:hover
						background-position -532px 73px

			.item2 
				a
					width 54px
					margin 6px 3px 0 0
					&:hover
						background-position -461px 78px

			.item3 
				a
					width 65px
					margin 5px 3px 0 0
					&:hover
						background-position -393px 79px

			.item4 
				a
					width 80px
					margin-right 3px
					&:hover
						background-position -309px 84px

			.item5 
				a
					width 90px
					margin-right 3px
					&:hover
						background-position -217px 84px

			.item6 
				a
					width 90px
					margin 5px 3px 0 0
					&:hover
						background-position -124px 79px

			.item7 
				a
					width 80px;
					margin 11px 3px 0 0;
					&:hover
						background-position -41px 73px



