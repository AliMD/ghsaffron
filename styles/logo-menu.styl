section.banner 
	height 300px
	width inherit
	margin 10px auto 0
	bottom 0
	padding-top 1px
	position absolute
	top 0
	left 0
	right 0
	z-index 50

.rtlLang
	nav
		menu
			list-style-type none
			width 648px
			height 100px
			background-image url(images/nav_fa.png)
			background-position center center
			background-repeat no-repeat
			position fixed
			top -117px
			left 0
			right 0
			margin 0 auto
			padding 0
			li
				float right
				margin-top 16px
				a
					display block
					height 50px
					&:hover
						background-image url('images/nav_fa_hover.png')
